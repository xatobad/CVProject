@model List<MvcCv.Models.Entity.TblAdmin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Admin</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı ADı</th>  
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AdminID</td>
            <td>@item.UserName</td>
            <td><a href="/Admin/AdminDelete/@item.AdminID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/AdminUpdate/@item.AdminID" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }


</table>
<a href="/Admin/AdminAdd" class="btn btn-primary">Kullanıcı Ekle</a>

