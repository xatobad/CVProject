@using MvcCv.Models.Entity
@model List<TblInterest>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Hobi Düzenleme Sayfası</h2>
<form method="post">
    @foreach (var item in Model)
    {
        <label>Açıklama </label>
        <textarea rows="5" class="form-control" name="Description">@item.Description</textarea>
        <br />
        <label>Açıklama </label>
        <textarea rows="5" class="form-control" name="Description2">@item.Description2</textarea>
    }
    <br />
    <button class="btn btn-success"> Güncelle</button>
</form>