@using MvcCv.Models.Entity
@model List<TblSkill> 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{string color = "";}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">

    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Yetenek Listem</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Yetenek İsim</th>
                                            <th>Derece</th>
                                            <th style="width: 40px">Oran</th>
                                            <th>Düzenle</th>
                                            <th>Sil</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            if (item.SkillValue >= 0 && item.SkillValue <= 50)
                                            {
                                                color = "progress-bar bg-danger";
                                            }
                                            if (item.SkillValue >= 51 && item.SkillValue <= 70)
                                            {
                                                color = "progress-bar bg-warning";
                                            }
                                            if (item.SkillValue >= 71 && item.SkillValue <= 84)
                                            {
                                                color = "progress-bar bg-primary";
                                            }
                                            if (item.SkillValue >= 84 && item.SkillValue <= 100)
                                            {
                                                color = "progress-bar bg-success";
                                            }
                                        <tr>
                                            <td>@item.SkillID</td>
                                            <td>@item.SkillName</td>

                                            <td>
                                                <div class="progress progress-xs">
                                                    <div class="@color" style="width:@item.SkillValue%"></div>
                                                </div>
                                            </td>
                                            <td><span class="@color">@item.SkillValue%</span></td>
                                            <td>
                                                <a class="btn btn-info btn-sm" href="/Skill/SkillUpdate/@item.SkillID">
                                                    <i class="fas fa-pencil-alt">
                                                    </i>
                                                    Güncelle
                                                </a>
                                            </td>
                                            <td>
                                                <a class="btn btn-danger btn-sm" href="/Skill/SkillDelete/@item.SkillID">
                                                    <i class="fas fa-trash">
                                                    </i>
                                                    Sil
                                                </a>
                                            </td>           

                                        </tr>
                                        }

                                    </tbody>
                                </table>

                               <a href="/Skill/SkilAdd" class="btn btn-primary"> Yeni Yetenek Ekle</a>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</body>
</html>