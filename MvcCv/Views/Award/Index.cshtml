@using MvcCv.Models.Entity
@model List<TblAward>

@{
   ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                            
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            
                                <div class="tab-pane" id="timeline">
                                    <!-- The timeline -->
                                    <div class="timeline timeline-inverse">
                                        <!-- timeline time label -->
                                        @foreach (var item in Model)
                                        {
                                        <div class="time-label">
                                            <a  href="/Award/AwardUpdate/@item.AwarID" class="btn btn-success">
                                            <span class="bg-success">
                                                @item.Date
                                            </span>
                                            </a>
                                        </div>
                                        <!-- /.timeline-label -->
                                        <!-- timeline item -->
                                        <div>
                                           
                                            <div class="timeline-item">
                                                
                                                
                                                <div class="timeline-body">
                                                    @item.explanation
                                                
                                            </div>
                                        </div>
                                        
                                    </div>
                                        }
                                </div>
                                    <a href="/Award/AwardAdd" class=" btn btn-info" > Yeni Sertifika Girişi</a>
                    
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.nav-tabs-custom -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
       
    </section>
</body>
</html>